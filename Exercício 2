Exercício 2

using System;

class MainClass
{
 static void Main (string[] args) {
  {
    int numero = 0;
    Console.WriteLine ("Entre com um número: ");
    numero = int.Parse(Console.ReadLine());

    while (numero > 0) {
      Console.WriteLine("Vou substituir 2 do número escolhido");

      numero = numero - 2;
      Console.WriteLine("O número agora é:{0}",numero);

      //Console.WriteLine("O número agora é: "+numero);
    }
                        

  }
}

}
